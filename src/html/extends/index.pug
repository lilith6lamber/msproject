- let title = "HOME"
doctype html
html(lang='en')
    include ../includes/head.pug
    body
        include ../includes/nav.pug
        .top-slider
            ul#hotproducts.homeslider
                li
                    .hot-text
                        p.hotitem-name Voyageur Brooklyn Backpack
                        p.hotitem-price $395.00
                        a.tocart(href='javascript:void(0)') Add to cart
                    .hot-img
                        picture
                            source(type='image/webp', srcset='img/1.webp')
                            source(type='image/jpeg', srcset='img/1.jpg')
                            img(src='img/1.jpg', alt='Voyageur Brooklyn Backpack')
                li
                    .hot-text
                        p.hotitem-name Nike Air Max 270 React SP
                        p.hotitem-price $50.70
                        a.tocart(href='javascript:void(0)') Add to cart
